{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@application/*": ["./application/*"],
      "@config/*": ["./config/*"],
      "@core/*": ["./core/*"],
      "@domain/*": ["./domain/*"],
      "@generated/*": ["./generated/*"],
      "@infrastructure/*": ["./infrastructure/*"],
      "@modules/*": ["./modules/*"],
      "@presentation/*": ["./presentation/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", ".vscode"]
}
